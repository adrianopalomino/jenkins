//Declarative Pipeline

pipeline {
    agent any

    stages {
        stage('Desenvolvimento') {
            steps {
                echo 'Ambiente de Desenvolvimento..'
            }
        }
        stage('Teste') {
            steps {
                echo 'Ambiente de Teste..'
            }
        }
        stage('Homologação') {
            steps {
                echo 'Ambiente de Homologação....'
            }
        }
        stage('Produção') {
            steps {
                echo 'Ambiente de Produção....'
            }
        }
    }
}
